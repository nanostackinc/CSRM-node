<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Data Siswa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/admin/bank?_method=PUT" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nama Siswa</label>
                        <input type="text" class="form-control nama" name="nama" placeholder="Masukan nama siswa"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="name">Tanggal Lahir</label>
                        <input type="date" class="form-control tanggal_lahir" name="tanggal_lahir" id="tanggal_lahir"
                            placeholder="Masukan tanggal lahir" required>
                    </div>

                    <div class="form-group">
                        <label for="name">Alamat</label>
                        <input type="text" class="form-control alamat" name="alamat" placeholder="Masukan alamat siswa"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="name">No Hp</label>
                        <input type="text" class="form-control no_hp" name="no_hp" placeholder="Masukan no hp" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Nama Orang Tua</label>
                        <input type="text" class="form-control ortu_nama" name="ortu_nama"
                            placeholder="Masukan Nama Orang Tua" required>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="name">Pekerjaan Orang Tua</label>
                                <input type="text" class="form-control ortu_pekerjaan" name="ortu_pekerjaan"
                                    placeholder="Masukan Pekerjaan Orang Tua" required>
                            </div>
                            <div class="form-group">
                                <label for="name">No Hp Orang Tua</label>
                                <input type="text" class="form-control ortu_hp" name="ortu_hp"
                                    placeholder="Masukan No Hp Orang Tua" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="name">Hubungan Orang Tua</label>
                                <div class="hubungan">
                                    <select id="hubungan" class="form-control">
                                        <!-- Elemen <option> akan ditambahkan melalui JavaScript -->
                                    </select>
                                </div>
                            </div>
                            <script>
                                let hubungan = document.querySelector('.hubungan');
                                let selectElement = hubungan.querySelector('select');

                                // Buat elemen-elemen <option>
                                let option1 = document.createElement('option');
                                option1.value = 'ayah';
                                option1.textContent = 'Ayah';

                                let option2 = document.createElement('option');
                                option2.value = 'ibu';
                                option2.textContent = 'Ibu';

                                let option3 = document.createElement('option');
                                option3.value = 'wali';
                                option3.textContent = 'Wali';

                                // Tambahkan elemen <option> ke dalam elemen <select>
                                selectElement.appendChild(option1);
                                selectElement.appendChild(option2);
                                selectElement.appendChild(option3);
                            </script>











                            <div class="form-group">
                                <label for="name">Alamat Orang Tua</label>
                                <input type="text" class="form-control ortu_alamat" name="ortu_alamat"
                                    placeholder="Masukan Alamat Orang Tua" required>
                            </div>
                        </div>
                    </div>





                </div>
                <div class="modal-footer">
                    <input type="hidden" class="id" name="id">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Mendapatkan elemen input tanggal_lahir
    var inputTanggalLahir = document.getElementById('tanggal_lahir');

    // Mendapatkan nilai dari class "tanggal_lahir"
    var tanggalAwal = document.querySelector('.tanggal_lahir').value;

    // Membuat objek Date dari tanggalAwal (format "YYYY-MM-DD")
    var date = new Date(tanggalAwal);

    // Mendapatkan tanggal, bulan, dan tahun dari objek Date
    var tahun = date.getFullYear();
    var bulan = date.toLocaleString('default', {
        month: 'long'
    });
    var tanggal = date.getDate();

    // Membuat tanggal dalam format "DD NamaBulan Tahun"
    var tanggalFormatted = tanggal.toString().padStart(2, '0') + ' ' + bulan + ' ' + tahun;

    // Set nilai awal (default value) pada input tanggal_lahir
    inputTanggalLahir.value = tanggalFormatted;
</script>
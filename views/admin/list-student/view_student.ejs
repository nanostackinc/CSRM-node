<script>
    $('#dataTable').on('click', '.button-update', function () {
        let id = $(this).data('id');
        let nama = $(this).data('nama');
        let tanggal_lahir = $(this).data('tanggal-lahir');
        let alamat = $(this).data('alamat');
        let no_hp = $(this).data('no_hp');
        let ortu_nama = $(this).data('ortu-nama');
        let ortu_pekerjaan = $(this).data('ortu-pekerjaan');
        let ortu_alamat = $(this).data('ortu-alamat');
        let ortu_hp = $(this).data('ortu-no_hp');
        let ortu_hubungan = $(this).data('ortu-hubungan');
        $('#edit-modal').modal('show');
        $('.id').val(id);
        $('.nama').val(nama);
        $('.tanggal_lahir').val(tanggal_lahir);
        $('.alamat').val(alamat);
        $('.no_hp').val(no_hp);
        $('.ortu_nama').val(ortu_nama);
        $('.ortu_pekerjaan').val(ortu_pekerjaan);
        $('.ortu_hp').val(ortu_hp);
        $('#ortu_hubungan').text(ortu_hubungan);
        $('.ortu_alamat').val(ortu_alamat);
    })
</script>
<script>
    $('#dataTable').on('click', '#show-parents', function () {
        let id = $(this).data('id');
        let ortu_nama = $(this).data('nama');
        let ortu_pekerjaan = $(this).data('pekerjaan');
        let ortu_alamat = $(this).data('alamat');
        let ortu_hp = $(this).data('no-hp');
        let ortu_hubungan = $(this).data('ortu-hubungan');

        $('#show-modal').modal('show');
        if (ortu_hubungan === 1) {
            $('.ortu_hubungan').text("Ayah");
        } else if (ortu_hubungan === 2) {
            $('.ortu_hubungan').text("Ibu");
        } else if (ortu_hubungan === 3) {
            $('.ortu_hubungan').text("Wali");
        } else {
            $('.ortu_hubungan').text("data tidak ditemukan");
        }
        $('.ortu_nama').text(ortu_nama);
        $('.ortu_pekerjaan').text(ortu_pekerjaan);
        $('.ortu_hp').text(ortu_hp);
        $('.ortu_alamat').text(ortu_alamat);
    })
</script>
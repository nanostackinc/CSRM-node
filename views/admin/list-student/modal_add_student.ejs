<!-- Modal -->
<div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Siswa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/admin/bank?_method=PUT" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nama Siswa</label>
                        <input type="text" class="form-control " name="nama" placeholder="Masukan nama siswa" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Tanggal Lahir</label>
                        <input type="date" class="form-control " name="tanggal_lahir" id="tanggal_lahir"
                            placeholder="Masukan tanggal lahir" required>
                    </div>

                    <div class="form-group">
                        <label for="name">Alamat</label>
                        <input type="text" class="form-control " name="alamat" placeholder="Masukan alamat siswa"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="name">No Hp</label>
                        <input type="text" class="form-control " name="no_hp" placeholder="Masukan no hp" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Nama Orang Tua</label>
                        <input type="text" class="form-control " name="ortu_nama" placeholder="Masukan Nama Orang Tua"
                            required>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="name">Pekerjaan Orang Tua</label>
                                <input type="text" class="form-control " name="ortu_pekerjaan"
                                    placeholder="Masukan Pekerjaan Orang Tua" required>
                            </div>
                            <div class="form-group">
                                <label for="name">No Hp Orang Tua</label>
                                <input type="text" class="form-control " name="ortu_hp"
                                    placeholder="Masukan No Hp Orang Tua" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="name">Hubungan Orang Tua</label>
                                <input type="text" class="form-control " name="ortu_hubungan"
                                    placeholder="Masukan Hubungan Orang Tua" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Alamat Orang Tua</label>
                                <input type="text" class="form-control " name="ortu_alamat"
                                    placeholder="Masukan Alamat Orang Tua" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <!-- <input type="hidden" name="id"> -->
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                    <button type="submit" class="btn btn-primary">Tambah</button>
                </div>
            </form>
        </div>
    </div>
</div>